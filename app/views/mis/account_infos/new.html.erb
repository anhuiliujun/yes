<%=render "/common/page_nav"%>
<%=render '/common/info_category_label'%>

<%=render 'form'%>

<div class="new_station_wrap" style="display:none;">
  <div class="new_station">
    <ul>
      <li>
        <span>账号类型：</span>
        <input type="text" id="category_name" class="width-161">
      </li>
    </ul>

    <div class="btn_group">
      <a href="javascript:void(0)" class="save_btn btn margin-right-180">保存</a>
      <a href="javascript:void(0)" class="cancel_btn btn ">取消</a>
    </div>
  </div>
</div>
<script type="text/javascript">
    $("i.fa.fa-plus").click(function(){
          $("div.new_station_wrap").show();
    })

    $("a.cancel_btn.btn").click(function(){
          $("div.new_station_wrap").hide();
    })

    $("a.save_btn.btn").click(function(){
          $("div.new_station_wrap").hide();
          var name = $("input#category_name").val();
          $.post("/account_infos/add_info_category",{name: name},function(){

          })
    })
</script>
