<div class="wrap">
  <div class="information">
    <dl>
      <dd>
        <label class="width-75">账号名称:</label>
        <span class="width-175"> <%= @staffer.login_name %> </span>
      </dd>
      <dd>
        <label class="width-75">账号角色:</label>
        <span class="width-175"> <%= @staffer.role %> </span>
      </dd>
      <dd>
        <label class="width-75">创建时间:</label>
        <span class="width-175"> <%= @staffer.created_at.strftime("%Y-%m-%d") %> </span>
      </dd>
    </dl>
    <dl>
      <dd>
        <label class="width-75">公司名称:</label>
        <span class="width-175"> <%= @staffer.agent.company_name %> </span>
      </dd>
      <dd>
        <label class="width-75">地址:</label>
        <span class="width-175"> <%= @staffer.agent.company_address %> </span>
      </dd>
      <dd>
        <label class="width-75">负责人:</label>
        <span class="width-175"> <%= @staffer.fullname %> </span>
      </dd>
    </dl>
    <dl>
      <dd>
        <label class="width-75">联系电话:</label>
        <span class="width-175"> <%= @staffer.agent.phone_number %> </span>
      </dd>
      <dd>
        <label class="width-75">负责区域:</label>
        <span class="width-175"> <%= @staffer.agent.charge_area %> </span>
      </dd>
      <dd>
        <label class="width-75">合作方式:</label>
        <span class="width-175"> <%= @staffer.agent.cooperation_way %> </span>
      </dd>
    </dl>

    <dl>
      <dd>
        <label class="width-75">名额:</label>
        <span class="width-175"> <%= @staffer.agent.quota %> </span>
      </dd>
      <dd>
        <label class="width-75">金额:</label>
        <span class="width-175"> <%= @staffer.agent.balance %> </span>
      </dd>
    </dl>
    <dl>
      <dd>
        <label  class="width-75">备注</label>
        <textarea disabled><%= @staffer.agent.remark%></textarea>
      </dd>
    </dl>
  </div>

</div>
